<%- include('../../partials/head.ejs')  %>

<div class="container-fluid d-flex justify-content-center my-5" style="width: 60%;">
    <div class="login_container">
        <div class="container p-5 shadow" style="background-color:#fff">
            <div class="title login_form_title">
                SIGN UP AND START PLAYING, FOR FREE
            </div>

            <div class="social_login">
                <div class="row">

                    <div class="col-sm-12 col-md-6 my-1">
                        <button
                            class="social_button btn btn-lg btn-block d-flex justify-content-center border outline-line"
                            style="width: 100%;">
                            <div>
                                <i class="fab fa-google mx-1"></i>
                            </div>
                            <div>
                                Sign up with Google
                            </div>
                        </button>
                    </div>

                    <div class="col-sm-12 col-md-6 my-1">
                        <button class="social_button btn btn-lg btn-block d-flex justify-content-center border"
                            style="width: 100%;">
                            <div>
                                <i class="fab fa-facebook mx-1"></i>
                            </div>
                            <div>
                                Sign up with Facebook
                            </div>
                        </button>
                    </div>

                    <div class="col-sm-12 col-md-6 my-1">
                        <button class="social_button btn btn-lg btn-block d-flex justify-content-center border"
                            style="width: 100%;">
                            <div>
                                <i class="fab fa-github mx-1"></i>
                            </div>
                            <div>
                                Sign up with Github
                            </div>
                        </button>
                    </div>

                    <div class="col-sm-12 col-md-6 my-1">
                        <button class="social_button btn btn-lg btn-block d-flex justify-content-center border"
                            style="width: 100%;">
                            <div>
                                <i class="fab fa-linkedin mx-1"></i>
                            </div>
                            <div>
                                Sign up with Linkedin
                            </div>
                        </button>
                    </div>


                </div>
            </div>
            <h5 class="text-center text-secondary my-4">Or</h5>

            <form action="/auth/signup" method="POST">

                <div class="form-outline mb-3">
                    <input type="text"
                        class="form-control border rounded-0 my-2 <%= error.username ? 'is-invalid': '' %> "
                        name="username" id="username" value="<%= value.username ? value.username : '' %>" />
                    <label class="form-label" for="form3Example1">User Name</label>
                    <div class="invalid-feedback">
                        <%= error.username && error.username %>
                    </div>
                </div>
                <!-- Email input -->
                <div class="form-outline mb-3">
                    <input type="text" id="form3Example1" class="form-control <%= error.email ? 'is-invalid': '' %>"
                        name="email" id="email" value="<%= value.email ? value.email : '' %>" />
                    <label class="form-label" for="form3Example3">Email address</label>
                    <div class="invalid-feedback">
                        <%= error.email && error.email %>
                    </div>
                </div>

                <!-- Password input -->
                <div class="form-outline mb-3">
                    <input type="password" id="form3Example1"
                        class="form-control  <%= error.password ? 'is-invalid': '' %>" name="password" id="password"
                        value="<%= value.password ? value.password: '' %>" />
                    <label class="form-label" for="form3Example4">Password</label>
                    <div class="invalid-feedback">
                        <%= error.password && error.password %>
                    </div>
                </div>

                <!-- Password input -->
                <div class="form-outline mb-3">
                    <input type="password" id="form3Example1"
                        class="form-control  <%= error.c_password ? 'is-invalid': '' %>" name="c_password"
                        id="c_password" />
                    <label class="form-label" for="form3Example4">Confirm Password</label>
                    <div class="invalid-feedback">
                        <%= error.c_password && error.c_password %>
                    </div>
                </div>


                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">I agree to the <span><a class="text-succes"
                                href="#">Privacy Policy </a></span>and the
                        <span><a class="text-succes" href="#">Cookies
                                Policy </a></span> (required)</label>
                </div>

                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1"><a class="text-dark" href="#">I wish to
                            receive the newsletters (about once a
                            month)</a></label>
                </div>

                <button type="submit" class="btn green btn-lg text-light btn-block my-4" style="width:100%">SIGN
                    UP</button>

            </form>


            <p class="text-center"><a class="text-dark" href="#" style="text-decoration: underline;">Already have an
                    account?</a></p>
        </div>
    </div>
</div>

<%- include('../../partials/footer.ejs')  %>

</body>

</html>