<%- include('../../../partials/head.ejs')  %>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-2">
            <%- include('../../../partials/sidebar.ejs')  %>
        </div>

        <div class="col-md-10 my-5">
            <div class="card card-body mx-5 py-5">
                <h5 class="my-3">Edit your post</h5>
                <form action="/posts/edit/<%= post._id %> " method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="title">Enter your post title</label>
                        <input type="text" name="title" id="title"
                            class="form-control <%= error.title ? 'is-invalid' : '' %> " value="<%= post.title %> ">

                        <div class="invalid-feedback"><%= error.title %> </div>
                    </div>

                    <div class="form-group">
                        <label for="tiny-mce-post-body">Enter your post body</label>
                        <textarea name="body" id="tiny-mce-post-body"
                            class="form-control <%= error.body ? 'is-invalid' : '' %>"><%=  post.body %></textarea>
                        <div class="invalid-feedback"><%= error.body %> </div>
                    </div>

                    <div class="form-group">
                        <label for="tag">Enter some tags</label>
                        <input type="text" name="tags" id="tags" class="form-control" placeholder="tag1,tag2,tag3"
                            value="<%= post.tags.length > 0 ? post.tags.join(', ') : '' %> ">
                    </div>

                    <% if(post.thumbnail){ %>
                    <label>Post Thumbnail</label>
                    <img src="<%= post.thumbnail %> " alt="post-thumbnail" class="img-fluid mb-4" id="thumbnail">
                    <% } %>

                    <div class="input-group my-3">
                        <div class="custom-file mx-2">
                            <input type="file" name="post-thumbnail" class="custom-file-input">
                            <label for="inputGroupFile" class="custom-file-label"></label>
                        </div>
                    </div>

                    <input type="submit" class="btn btn-primary" value="Update Post">
                    <a href="/posts/delete/<%= post._id %> " class="btn btn-danger">Delete Post</a>

                </form>
            </div>
        </div>



    </div>


    <%- include('../../../partials/footer.ejs')  %>
    <script src="https://cdn.tiny.cloud/1/ainx8rs3dres3llj5w6l3q3nnwk2sni14kp7k20x5q36aryp/tinymce/5/tinymce.min.js"
        referrerpolicy="origin"></script>
    <script src="/scripts/tinymce.js"></script>
    </body>

    </html>