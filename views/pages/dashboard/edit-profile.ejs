<%- include('../../partials/head.ejs')  %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/croppie/2.6.5/croppie.css">


<div class="container my-5">

    <div class="innerwrap">
        <div>
            <img src="https://mdbootstrap.com/img/new/standard/nature/189.jpg" alt="" class="img-fluid rounded"
                style="height: 300px; width: 100%;">
        </div>
        <section class="section1 clearfix" style="margin-top: -10px;">
            <div>
                <div class="row grid clearfix">
                    <div class="col2 first">
                        <img src="/uploads/soikat.jpg" alt="" class="img-fluid img-thumbnail">
                        <h1><%= profile.name %></h1>
                        <p><%= profile.title %></p>
                        <span>Follow</span>
                    </div>
                    <div class="col2 last">
                        <div class="grid clearfix">
                            <div class="col3 first">
                                <h1><%= profile.follower.length %></h1>
                                <span>Follower</span>
                            </div>
                            <div class="col3">
                                <h1><%= profile.following.length %></h1>
                                <span>Following</span>
                            </div>
                            <div class="col3 last">
                                <h1><%= profile.posts.length %></h1>
                                <span>Posts</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row clearfix">
                    <ul class="row2tab clearfix">
                        <li><i class="fa fa-list-alt"></i> My posts </li>
                        <li><i class="fa fa-heart"></i> My likes </li>
                        <li><i class="fa fa-check"></i> Following </li>
                        <li><i class="fa fa-thumbs-o-up "></i> Suggestions </li>
                    </ul>
                </div>
            </div>
            <span class="smalltri">

                <i class="fa fa-star"></i>
            </span>

        </section>

        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-6 col-lg-4 py-5 offset-lg-1">
                    <div class="card">
                        <div class="card-body">
                            <div class="skills">

                                <h6 class="my-2">Skills</h6>

                                <hr>
                                <strong>HTML</strong>
                                <div class="progress mb-2" style="height: 20px;">
                                    <div class="progress-bar green text-light" role="progressbar" style="width: 78%;"
                                        aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"> 78% </div>
                                </div>

                                <strong>CSS</strong>
                                <div class="progress mb-2" style="height: 20px;">
                                    <div class="progress-bar green text-light" role="progressbar" style="width: 70%;"
                                        aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"> 70% </div>
                                </div>

                                <strong>JAVASCRIPT</strong>
                                <div class="progress mb-2" style="height: 20px;">
                                    <div class="progress-bar green text-light" role="progressbar" style="width: 90%;"
                                        aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"> 90% </div>
                                </div>

                                <strong>PHP</strong>
                                <div class="progress mb-2" style="height: 20px;">
                                    <div class="progress-bar green text-light" role="progressbar" style="width: 65%;"
                                        aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"> 65% </div>
                                </div>
                            </div>

                            <div class="mt-4">
                                <h6 class="my-2">Details</h6>
                                <hr>
                                <h6> <i class="fa fa-map-marker-alt mx-2"></i> Lives in
                                    <span class="fw-bold">Dhaka</span>
                                </h6>
                                <h6> <i class="fa fa-clock mx-2"></i> Joined on
                                    <span>February, 2014</span>
                                </h6>
                                <div class="social-links mt-4">
                                    <!-- Facebook -->
                                    <a class="btn btn-primary" style="background-color: #3b5998;" href="#!"
                                        role="button"><i class="fab fa-facebook-f"></i></a>

                                    <!-- Google -->
                                    <a class="btn btn-primary" style="background-color: #dd4b39;" href="#!"
                                        role="button"><i class="fab fa-google"></i></a>

                                    <!-- Github -->
                                    <a class="btn btn-primary" style="background-color: #333333;" href="#!"
                                        role="button"><i class="fab fa-github"></i></a>

                                    <!-- Youtube -->
                                    <a class="btn btn-primary" style="background-color: #ed302f;" href="#!"
                                        role="button"><i class="fab fa-youtube"></i></a>

                                </div>
                            </div>

                        </div>
                    </div>
                </div>

                <div class="col-sm-12 col-md-6 col-lg-5 py-5">
                    <div class="card">
                        <div class="card-body">
                            <form action=" /dashboard/edit-profile" method="post">
                                <!-- 2 column grid layout with text inputs for the first and last names -->
                                <div class="row mb-4">
                                    <div class="col">
                                        <div class="form-outline">
                                            <input type="text" id="form6Example1" value="<%= profile.name %>"
                                                class="form-control" name="name" />
                                            <label class="form-label" for="form6Example1">First name</label>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="form-outline">
                                            <input type="text" id="form6Example2" value="<%= profile.name %>"
                                                class="form-control" />
                                            <label class="form-label" for="form6Example2">Last name</label>
                                        </div>
                                    </div>
                                </div>

                                <!-- Email input -->
                                <div class="form-outline mb-4">
                                    <input type="email" id="form6Example5" value="<%= user.email %>"
                                        class="form-control" disabled name="email" />
                                </div>

                                <!-- Title input -->
                                <div class="form-outline mb-4">
                                    <textarea class="form-control" id="form6Example7" rows="1"
                                        name="title"><%= profile.title %></textarea>
                                    <label class="form-label" for="form6Example7">Profile Title</label>
                                </div>

                                <!-- Title input -->
                                <div class="form-outline mb-4">
                                    <textarea class="form-control" id="form6Example8" rows="2"
                                        name="bio"><%= profile.bio %></textarea>
                                    <label class="form-label" for="form6Example8">Profile Bio</label>
                                </div>

                                <!-- Text input -->
                                <div class="form-outline mb-4">
                                    <input type="text" id="form6Example3" class="form-control" />
                                    <label class="form-label" for="form6Example3">Website name</label>
                                </div>

                                <!-- Text input -->
                                <div class="form-outline mb-4">
                                    <input type="text" id="form6Example4" class="form-control" />
                                    <label class="form-label" for="form6Example4">Address</label>
                                </div>


                                <!-- Number input -->
                                <div class="form-outline mb-4">
                                    <input type="number" id="form6Example6" class="form-control" />
                                    <label class="form-label" for="form6Example6">Phone</label>
                                </div>

                                <div class="my-5">
                                    <h6>Skills</h6>
                                    <hr>
                                </div>

                                <div class="my-5">
                                    <h6>Social Links (if any)</h6>
                                    <hr>
                                    <!-- Facebook -->
                                    <div class="form-outline mb-4">
                                        <input type="text" id="facebook" class="form-control" />
                                        <label class="form-label" for="facebook">Facebook</label>
                                    </div>
                                    <!-- Github  -->
                                    <div class="form-outline mb-4">
                                        <input type="text" id="github" class="form-control" />
                                        <label class="form-label" for="github">Github</label>
                                    </div>
                                    <!-- Youtube -->
                                    <div class="form-outline mb-4">
                                        <input type="text" id="youtube" class="form-control" />
                                        <label class="form-label" for="youtube">Youtube</label>
                                    </div>
                                </div>


                                <!-- Submit button -->
                                <button type="submit" class="btn green text-light btn-block mb-4">Place order</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>


    </div>
</div>


<div class="container-fluid">
    <div class="row">
        <div class="modal fade bd-example-modal-lg" id="crop-modal" role="dialog"
            aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <h5 class="modal-tite" id="exampleModalCenterTitle">
                        Resize Your Image
                    </h5>
                    <button type="button" class="close" data-dissmiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div id="cropped-image">

                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" id="cancel-cropping">Cancel</button>
                    <button class="btn btn-primary" id="upload-image">Upload</button>
                </div>
            </div>

        </div>

    </div>




    <%- include('../../partials/footer.ejs')  %>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/croppie/2.6.5/croppie.js"></script>
    <script src="/scripts/profilePicsUpload.js"></script>

    </body>

    </html>