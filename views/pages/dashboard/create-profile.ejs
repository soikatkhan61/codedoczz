<%- include('../../partials/head.ejs')  %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/croppie/2.6.5/croppie.css">

<div class="container-fluid">
    <div class="row">
        <div class="col-md-2">
            <%- include('../../partials/sidebar.ejs')  %>
        </div>

        <div class="col-md-10">
            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <div class="card card-body box-shadow">
                        <h4><%= title %> </h4>
                        <div class="profile-pics">
                            <img src=" <%= user.profilePics %>" style="width: 200px; height: 200px;" alt="profile-pics"
                                class="img-thumbnail img-fluid">

                            <form action="/uploads/profilePics" class="my-2" id="profilePicsForm">
                                <input type="file" name="profilePics" id="profilePicsFile" accept="image/*">

                                <input type="button" value="Remove" class="btn btn-danger btn-sm my-2"
                                    id="removeProfilePics"
                                    style="display: <%= user.profilePics.includes('soikat.jpg') ? 'none' : 'block'%>  ">
                            </form>
                        </div>

                        <div>
                            <form action="/dashboard/create-profile" method="post">
                                <div class="form-outline mb-4">
                                    <input type="text" id="form4Example1"
                                        class="form-control <%= error.name ? 'is-invalid' : '' %>" name="name" />
                                    <label class="form-label" for="form4Example1">Name</label>
                                    <div class="invalid-feedback">
                                        <%= error.name %>
                                    </div>
                                </div>

                                <!-- Email input -->
                                <div class="form-outline mb-4">
                                    <input type="email" id="form4Example2" class="form-control" name="email"
                                        value="<%= user.email %> " disabled />

                                </div>

                                <!-- title input -->
                                <div class="form-outline mb-4">
                                    <input type="text" id="form4Example1"
                                        class="form-control  <%= error.title ? 'is-invalid' : '' %>" name="title" />
                                    <label class="form-label" for="form4Example1">Title</label>
                                    <div class="invalid-feedback">
                                        <%= error.bio %>
                                    </div>
                                </div>

                                <!-- bio input -->
                                <div class="form-outline mb-4">
                                    <input type="text" id="form4Example1"
                                        class="form-control  <%= error.bio ? 'is-invalid' : '' %>" name="bio" />
                                    <label class="form-label" for="form4Example1">bio</label>
                                    <div class="invalid-feedback">
                                        <%= error.bio %>
                                    </div>
                                </div>


                                <!-- Submit button -->
                                <button type="submit" class="btn btn-primary btn-block mb-4">Send</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade bd-example-modal-lg" id="crop-modal" role="dialog"
            aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <h5 class="modal-tite" id="exampleModalCenterTitle">
                        Resize Your Image
                    </h5>
                    <button type="button" class="close" data-dissmiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div id="cropped-image">

                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" id="cancel-cropping">Cancel</button>
                    <button class="btn btn-primary" id="upload-image">Upload</button>
                </div>
            </div>

        </div>

    </div>


    <%- include('../../partials/footer.ejs')  %>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/croppie/2.6.5/croppie.js"></script>
    <script src="/scripts/profilePicsUpload.js"></script>

    </body>

    </html>